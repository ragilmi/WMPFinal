<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <!-- Main Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Subject Checkboxes -->
        <CheckBox
            android:id="@+id/checkbox_subject1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculus (3 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programming Concept (3 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web Programming (2 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discrete Mathematics (3 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Organization and Architecture (2 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operating System Design (3 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Database System (2 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />
        <CheckBox
            android:id="@+id/checkbox_subject8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object Oriented and Visual Programming (2 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear Algebra (2 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Probability and Statistics (1 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server-side Internet Programming (1 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Network (3 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network Security (2 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Structure Algorithm (3 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numerical Methods (2 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3D Computer Graphics and Animation (2 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wireless Mobile Programming (3 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Engineering (3 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/checkbox_subject19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artificial Intelligence (3 credits)"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <!-- Enroll Button -->
        <Button
            android:id="@+id/btn_enroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enroll"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginTop="20dp" />

        <!-- Enroll Summary Button -->
        <Button
            android:id="@+id/btn_enroll_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enroll Summary"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
